<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/grassfield"
    android:backgroundTint="@color/brown"
    android:backgroundTintMode="multiply"
    tools:context=".fragments.FieldFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@drawable/grassfield">

        <RelativeLayout
            android:id="@+id/enemyLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/fighterLayout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/enemyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/enemyImage"
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:layout_below="@id/enemyName" />

            <ProgressBar
                android:id="@+id/enemyHealth"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/enemyImage"
                android:max="100"
                android:paddingTop="5dp"
                android:progress="100"
                android:progressTint="@color/red" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fighterLayout"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fighterImage"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_below="@id/fighterName" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fighterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="25sp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fighterHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textAllCaps="false"
                android:layout_below="@id/fighterImage"
                android:layout_alignParentStart="true"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fighterAttack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textAllCaps="false"
                android:layout_below="@id/fighterImage"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/fab_next"
            android:backgroundTint="@color/green"
            android:backgroundTintMode="add"
            app:srcCompat="@android:drawable/ic_media_play"/>
    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fieldLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:background="@drawable/grassfield">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fieldedCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/placeCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/place_card"
            android:visibility="gone"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/no_card_TView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/no_card"
            android:textAlignment="center"
            android:textSize="25sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <RelativeLayout
        android:id="@+id/deckLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_margin="0dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_fighterInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/fab_description"
            android:backgroundTint="@color/brown"
            android:backgroundTintMode="add"
            app:srcCompat="@android:drawable/ic_menu_help"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deckRView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="10dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/howToPlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:text="@string/how_to_play"
        android:visibility="gone"/>
</androidx.appcompat.widget.LinearLayoutCompat>